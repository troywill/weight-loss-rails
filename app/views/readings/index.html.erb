<h1>Scale Readings</h1>

<table>
  <tr>
    <th>Time</th>
    <th>Weight</th>
    <th>Unix Time</th>
    <th></th>
    <th></th>
  </tr>

<% @readings.each do |reading| %>
  <tr>
    <td><%= reading.reading_time.to_formatted_s(:short) %></td>
    <td><%= reading.weight %></td>
    <td><%= reading.reading_time.to_i %></td>
    <td><%= link_to 'Edit', edit_reading_path(reading) %></td>
    <td><%= link_to 'Delete', reading, :method => :delete %></td>
  </tr>
<% end %>
</table>
